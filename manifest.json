{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "Clipboard2File",
  "version": "3.2",
  "description": "Instantly upload pictures from your clipboard!",
  "icons": {
    "549": "./icons/clipboard2file.png"
  },
  "options_ui": {
    "page": "settings/settings.html"
  },
  "web_accessible_resources": [{
    "resources": [
      "content/shadow.css",
      "content/popup.html",
      "content/popup.css",
      "content/popup.js",
      "content/event_fix.js"
    ],
    "matches": ["<all_urls>"]
  }],
  "permissions": ["clipboardRead", "clipboardWrite", "storage"],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true,
      "js": ["content/all_frames.js"]
    },
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "all_frames": false,
      "js": ["content/parent_frame.js"]
    }
  ]
}
