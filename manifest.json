{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "Clipboard2File",
  "version": "3.1",
  "description": "Instantly upload pictures from your clipboard!",
  "icons": {
    "549": "/icons/clipboard2file.png"
  },
  "options_ui": {
    "page": "settings/settings.html"
  },
  "web_accessible_resources": [{
    "resources": [
      "content_script/shadow.css",
      "content_script/popup.html",
      "content_script/popup.css",
      "content_script/event_fix.js"
    ],
    "matches": ["<all_urls>"]
  }],
  "permissions": ["clipboardRead", "clipboardWrite", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "all_frames": true,
      "js": ["content_script/content.js"]
    }
  ]
}
